rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for testing
    // In production, implement proper authentication rules
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for buyers collection
    match /buyers/{buyerId} {
      allow read, write: if true;
    }
    
    // Specific rules for sellers collection
    match /sellers/{sellerId} {
      allow read, write: if true;
    }
    
    // Test collection for connection testing
    match /test/{testId} {
      allow read, write: if true;
    }
  }
}